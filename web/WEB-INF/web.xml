    <security-constraint>
        <web-resource-collection>
            <web-resource-name>HI3Author API</web-resource-name>
            <url-pattern>/api/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <servlet>
        <servlet-name>org.hyperimage.service.ws.rest.HIPublicationService</servlet-name>
        <init-param>
            <param-name>com.sun.jersey.spi.container.ContainerResponseFilters</param-name>
            <param-value>org.hyperimage.service.ws.rest.HIServiceCORSFilter</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>org.hyperimage.service.ws.rest.HIServiceApp</servlet-name>
        <init-param>
            <param-name>com.sun.jersey.spi.container.ContainerResponseFilters</param-name>
            <param-value>org.hyperimage.service.ws.rest.HIServiceCORSFilter</param-value>
        </init-param>
    </servlet>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
